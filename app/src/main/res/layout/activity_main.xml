<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context="com.example.android.singlescreenapp_rat.MainActivity">

    <TextView
        android:id="@+id/textViewTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="We believe in freedom\n of expression..."
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textViewTop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewTop1"
        android:textSize="14sp"
        android:fontFamily="sans-serif-condensed"
        android:text="Recordig studio. Mix and mastering OnLine." />

    <TextView
        android:id="@+id/textAdres0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:layout_above="@id/textAdres1"
        android:text="RATstudios" />

    <TextView
        android:id="@+id/textAdres1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:layout_above="@id/textAdres2"
        android:text="St. Chrobrego 145-147" />

    <TextView
        android:id="@+id/textAdres2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:layout_above="@id/textAdres3"
        android:text="ToruÅ„ - Poland" />

    <TextView
        android:id="@+id/textAdres3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="14dp"
        android:layout_above="@id/textAdres4"
        android:text="+48 603 918 524"
        android:autoLink="phone"/>

    <TextView
        android:id="@+id/textAdres4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoLink="web"
        android:paddingLeft="14dp"
        android:paddingBottom="38dp"
        android:text="www.ratstudios.com" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:paddingRight="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="RATstudios Logo"
        android:src="@drawable/ratstudio_logo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:padding="12dp"
        android:layout_below="@id/textViewTop2"
        android:src="@drawable/ratstudios_controlroom"
        android:contentDescription="Control room in RATstudios facility. "
        />


</RelativeLayout>

